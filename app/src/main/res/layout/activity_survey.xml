<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyActivity"
    android:background="@color/white">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_close_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survey"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questionario"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/question1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come ti senti oggi?"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_emoji_emotions_24"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_neutral_fill_svgrepo_com__4_"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_sad_svgrepo_com"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/question2_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Ti senti stressato o ansioso?" />

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_emoji_emotions_24"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_neutral_fill_svgrepo_com__4_"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_sad_svgrepo_com"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/question3_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Ti senti fisicamente energico e attivo?" />

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_emoji_emotions_24"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_neutral_fill_svgrepo_com__4_"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_sad_svgrepo_com"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/question4_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Quanto sei soddisfatto del tuo stato di salute generale?" />

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_emoji_emotions_24"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_neutral_fill_svgrepo_com__4_"/>

            <RadioButton
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:drawableStart="@drawable/emoji_sad_svgrepo_com"/>

        </RadioGroup>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invia risposte"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:textColor="@color/black"/>

    </LinearLayout>
</ScrollView>